@model ProjectVM
@{
    ViewData["Title"] = Model.Project.Id != 0 ? "Update Project" : "Create Project";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input asp-for="Project.Id" hidden />
            <div class="form-floating mb-3">
                <select asp-for="Project.Type" asp-items="@Model.TypeList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Project Type--</option>
                </select>
                <label asp-for="Project.Type" class="ms-2"></label>
                <span asp-validation-for="Project.Type" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Project.StartDate" type="date" class="form-control" />
                <label asp-for="Project.StartDate" class="ms-2">Start Date</label>
                <span asp-validation-for="Project.StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Project.EndDate" type="date" class="form-control" />
                <label asp-for="Project.EndDate" class="ms-2">EndDate</label>
                <span asp-validation-for="Project.EndDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Project.ManagerId" asp-items="@Model.ProjectManagerList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Project Manager--</option>
                </select>
                <label asp-for="Project.ManagerId" class="ms-2">Project Manager</label>
                <span asp-validation-for="Project.ManagerId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Project.Comment" class="form-control" style="height:125px" ></textarea>
                <label asp-for="Project.Comment"></label>
                <span asp-validation-for="Project.Comment" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="SelectedEmployees" asp-items="@Model.EmployeeList">
                    <option disabled selected>--Select Employees--</option>
                </select>
                <span asp-validation-for="SelectedEmployees" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Project.Status" asp-items="@Model.StatusList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Status--</option>
                </select>
                <label asp-for="Project.Status" class="ms-2"></label>
                <span asp-validation-for="Project.Status" class="text-danger"></span>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary btn-lg form-control">@(Model.Project.Id != 0 ? "Update" : "Create")</button>
                <a asp-controller="Project" asp-action="Index" class="btn btn-secondary btn-lg form-control">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
